# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
GET     /health                     controllers.HealthController.check

POST    /auth/login                 controllers.AuthController.login
POST    /auth/logout                controllers.AuthController.logout

GET     /users                      controllers.UserController.all
GET     /users/:id                  controllers.UserController.show(id: String)
PUT     /users                      controllers.UserController.create

GET     /channels                   controllers.ChannelController.all
GET     /channels/:id               controllers.ChannelController.show(id: String)
PUT     /channels                   controllers.ChannelController.create

GET     /channels/:channelId/messages      controllers.MessageController.getMessages(channelId: String)
PUT     /channels/:channelId/messages      controllers.MessageController.post(channelId: String)
